generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
}

model ImageJob {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  inputKey  String
  status    JobStatus @default(QUEUED)

  outputKey String?
  error     String?
}

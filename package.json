{
  "name": "pixpipe",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier -w .",
    "db:generate": "pnpm -C packages/db prisma generate",
    "db:migrate": "pnpm -C packages/db prisma migrate dev",
    "db:studio": "pnpm -C packages/db prisma studio"
  },
  "devDependencies": {
    "prettier": "^3.3.3"
  }
}
